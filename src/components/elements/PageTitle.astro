---
import { type HTMLAttributes } from 'astro/types';
import Text from './Text.astro';

interface Props extends HTMLAttributes<'div'> {
  title?: string;
}

const { title, class: classList, ...rest } = Astro.props as Props;
---

<div class:list={['container mx-auto mb-2 max-w-none py-2 lg:mb-8 lg:py-8 ', classList]} {...rest}>
  {
    title ? (
      <Text type="page-h1" data-testid="title">
        {title}
      </Text>
    ) : (
      <span data-testid="title">
        <slot />
      </span>
    )
  }
  <slot name="sub-title" />
  <slot name="content" />
  <slot name="footer" />
</div>
